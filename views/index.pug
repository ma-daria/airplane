head
  meta(charset='UTF-8')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
  title no aviasales

body

  br
  // Основное поле
  .container
    // Поиск
    .row
      form.form-inline.col-sm-12.col-md-12(action="/search")
        .col-sm-12.col-md-3
          .input-group
            if (cFrom === undefined)
              input#cityFrom.form-control(type='text' placeholder='откуда' name="cityFrom")
            else
              input#cityFrom.form-control(type='text' placeholder='откуда' name="cityFrom" value = cFrom)
        .col-sm-12.col-md-3
          .input-group
            if (cTo === undefined)
              input#cityTo.form-control(type='text' placeholder='куда' name="cityTo")
            else
              input#cityTo.form-control(type='text' placeholder='куда' name="cityTo" value = cTo)
        .col-sm-12.col-md-3
          .input-group
            if (date === undefined)
              input#dateFrom.form-control(type='date' placeholder='когда' name="dateFrom")
            else
              input#dateFrom.form-control(type='date' placeholder='когда' name="dateFrom" value = date)
        .col-sm-12.col-md-3
          button.btn.btn-dark.btn-block(type='submit' style='background-color: #3f294f;') Найти
    // Результат
    br
    div
      table.table.table-hover
        thead.bg-light.text-primary
          tr
            th время отправки
            th время прилета
            th кол-во пересадок
            th цена
        tbody
          if (flightCheap !== undefined)
            tr(onclick="window.location.href='/about_flights?flightCheap='+"+flightCheap + "; return false")
              td #{flightDateFrom}
              td #{flightDateTo}
              td #{flightCheap[0].length}
              td #{flightCheap[1]}

  nav.navbar.fixed-bottom.navbar-expand-sm.navbar-light.bg-light
    footer.main-footer.d-flex.p-2.px-3(style='margin: 0 0 0 auto;')
